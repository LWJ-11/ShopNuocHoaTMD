@model IEnumerable<ShopNuocHoaTMD.Models.EF.Advertisement>
@{
    ViewBag.Title = "Advertisement";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Menu" class="nav-link">Menu</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Advertisement" class="nav-link">Advertisement</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Brand" class="nav-link">Brand</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Category" class="nav-link">Category</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Topic" class="nav-link">Topic</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Advertisement Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Advertisement</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Advertisement List</h3>

            <div class="card-tools">
                <a href="/Admin/Advertisement/Add" class="btn btn-primary">Add</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created date</th>
                        <th>Modified date</th>
                        <th>Image</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Adv_Id">
                                <td>@i</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.ModifiedDate.ToString("dd/MM/yyyy")</td>
                                <td><img src="@item.Image" style="width:50px" /></td>
                                <td>
                                    <a href="/Admin/Advertisement/Edit/@item.Adv_Id" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.Adv_Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script>
            $(document).ready(function () {
                $('body').on('click', '.btnDelete', function () {
                    var id = $(this).data("id");
                    var conf = confirm('Do you want to delete this record?')
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/advertisement/delete',
                            type: 'POST',
                            data: { id: id },
                            success: function (rs) {
                                if (rs.success) {
                                    $('#trow_' + id).remove(); l
                                }
                            }
                        })
                    }
                });
            });
        </script>
}