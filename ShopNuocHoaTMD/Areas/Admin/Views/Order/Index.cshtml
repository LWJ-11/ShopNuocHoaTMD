@model PagedList.IPagedList<ShopNuocHoaTMD.Models.EF.Order>
@using PagedList.Mvc
@{
    ViewBag.Title = "Order List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Menu" class="nav-link">Menu</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Advertisement" class="nav-link">Advertisement</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Brand" class="nav-link">Brand</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Category" class="nav-link">Category</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Topic" class="nav-link">Topic</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Product" class="nav-link">Product</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Order" class="nav-link">Order</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <h4 class="font-weight-bold"    >Orders List</h4>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Mobile Number</th>
                        <th>Total Amount</th>
                        <th>Paid</th>
                        <th>Created Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 0;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@(i+1)</td>
                                <td>@item.Order_Id</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Phone</td>
                                <td>$@item.TotalAmount.ToString("0.00")</td>
                                <td><span class="rounded p-1 @(item.IsPaid == false ? "bg-danger" : "bg-success")">@(item.IsPaid == false ? "Not yet" : "Already")</span></td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="/admin/order/view/@item.Order_Id" class="btn btn-sm btn-success">View</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <div class="card-footer"></div>
    </div>
</section>
<!-- /.content -->
