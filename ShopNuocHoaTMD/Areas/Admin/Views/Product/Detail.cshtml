@model ShopNuocHoaTMD.Models.EF.Product
@{
    ViewBag.Title = "Product Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Brand" class="nav-link">Product</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Detail</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Product Detail</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Product</a></li>
                    <li class="breadcrumb-item active">Detail</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Product Infomation</h3>

            @*<div class="card-tools">
                    <a href="/menu/add" class="btn btn-primary">Thêm mới</a>
                </div>*@
        </div>
        <div class="card-body">
            <div class="card-body p-0">
                @if (Model != null)
                {
                   <div class="col-md-6">
                       <div class="row">
                           <div class="col-lg-3">
                               <img class="imgproduct" data-id="@Model.Product_Id" src="@Model.ProductImage.FirstOrDefault(x=>x.isDefault).Image" width="160" />
                           </div>
                           <div class="col-lg-9">
                               <div class="row">
                                   <h3>@Model.Name</h3>
                               </div>
                               <div class="row">
                                   <label for="exampleInputEmail1">Product Brand: &nbsp;</label>
                                   <p>@Model.Brand.Name</p>
                               </div>
                               <div class="row">
                                   <label for="exampleInputEmail1">Product Topic: &nbsp;</label>
                                   <p>@Model.Topic.Title</p>
                               </div>
                               <div class="row">
                                   <label for="exampleInputEmail1">Product Category: &nbsp;</label>
                                   <p>@Model.Category.Name</p>
                               </div>
                           </div>
                       </div>
                       <br />
                       <div class="row">
                           <div class="col-lg-6">
                               <label for="exampleInputEmail1">Description</label>
                               <p>@Model.Description</p>
                           </div>
                           <div class="col-lg-2"></div>
                           <div class="col-lg-4">
                               <label>Stock</label>
                               <table class="table table-condensed table-responsive">
                                   @if (Model.ProductStock != null && Model.ProductStock.Any())
                                   {
                                       <tr>
                                           <th>Volume</th>
                                           <th>Quantity</th>
                                           <th>Price</th>
                                       </tr>
                                       foreach (var item in Model.ProductStock)
                                       {
                                           <tr id="trow_@item.Stock_Id" class="text-center">
                                               <td>@item.Volume ml</td>
                                               <td>@item.Quantity</td>
                                               <td>$@item.Price</td>
                                               <td>
                                                   <a href="#" data-id="@item.Stock_Id" class="btn btn-sm btn-danger btnDelete">Delete</a>
                                               </td>
                                           </tr>
                                       }
                                   }
                                   else
                                   {
                                       <h5>This product hasn't has stock yet.<br /> Please add product stock</h5>
                                   }
                               </table>
                               <a href=" @Url.Action("AddStock", "ProductStock", new { id = Model.Product_Id}, null)" class="btn btn-primary">Add Stock</a>
                           </div>
                       </div>
                   </div>
                }

            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>

<!-- /.content -->
@section scripts{
    <script>
            $(document).ready(function () {
                $('body').on('click', '.btnDelete', function () {
                    var id = $(this).data("id");
                    var conf = confirm('Do you want to delete this record?')
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/productstock/delete',
                            type: 'POST',
                            data: { id: id },
                            success: function (rs) {
                                if (rs.success) {
                                    $('#trow_' + id).remove(); l
                                }
                            }
                        })
                    }
                });
            });
    </script>
}